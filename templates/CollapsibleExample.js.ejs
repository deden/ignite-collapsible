import React, { Component } from 'react'
import { View, Text, TouchableHighlight, StyleSheet } from 'react-native';
import ExamplesRegistry from '../../../App/Services/ExamplesRegistry'
import Collapsible from 'react-native-collapsible';

const styles = StyleSheet.create({
  container: {
    backgroundColor: '#fff',
    margin: 10,
    overflow: 'hidden'
  },
  header: {
    backgroundColor: '#F5FCFF',
    padding: 10,
  },
  headerText: {
    textAlign: 'center',
    fontSize: 16,
    fontWeight: '500',
  },
  body: {
    backgroundColor: '#ff3b3a',
    padding: 10,
    paddingTop: 0
  }
})

class CollapsibleExample extends Component {
  state = {
    collapsed: true,
  };

  _toggleExpanded = () => {
    this.setState({ collapsed: !this.state.collapsed });
  }

  render() {
    return (
      <View style={styles.container}>
        <TouchableHighlight onPress={this._toggleExpanded}>
          <View style={styles.header}>
            <Text style={styles.headerText}>Tap to expand</Text>
          </View>
        </TouchableHighlight>
        <Collapsible collapsed={this.state.collapsed} align="center">
          <View style={styles.body}>
            <Text style={styles.headerText}>Inner children</Text>
          </View>
        </Collapsible>
      </View>
    )
  }
}
// Example

ExamplesRegistry.addPluginExample('Collapsible', () =>
<CollapsibleExample />
)
